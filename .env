# Port du serveur
PORT=3000
NODE_ENV=development

# URL de connexion à MongoDB
# REMPLACEZ 'mongodb://localhost:27017/belafrica' par votre URI MongoDB Atlas ou locale
MONGODB_URI=mongodb://localhost:27017/belafrica

# URL de l'application frontend
FRONTEND_URL=https://belafrica-version1.netlify.app

# JWT Secret
# !!! Changez cette clé secrète pour la production !!!
JWT_SECRET=belafrica_super_secret_key_2025_change_in_production

# Cloudinary (pour le stockage des images/avatars)
CLOUDINARY_CLOUD_NAME=votre_cloud_name
CLOUDINARY_API_KEY=votre_api_key
CLOUDINARY_API_SECRET=votre_api_secret

