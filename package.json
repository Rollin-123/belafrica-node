{
  "name": "belafrica-backend",
  "version": "1.0.0",
  "description": "Backend API for BELAFRICA - African Community Platform",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only --ignore-watch node_modules src/server.ts",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "deploy": "npm run build && git add . && git commit -m 'Deploy' && git push",
    "render-deploy": "npm run build && render deploy"
  },
  "keywords": [
    "belafrica",
    "african",
    "community",
    "diaspora",
    "api"
  ],
  "author": "BELAFRICA Team",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.38.0",
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.3.1",
    "geoip-lite": "^1.4.10",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.3",
    "node-telegram-bot-api": "^0.63.0",
    "qs": "^6.14.1",
    "socket.io": "^4.8.3",
    "tough-cookie": "^6.0.0",
    "uuid": "^13.0.0",
    "winston": "^3.11.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.19.30",
    "@types/node-telegram-bot-api": "^0.64.13",
    "@types/uuid": "^11.0.0",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/belafrica-backend.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/belafrica-backend/issues"
  },
  "homepage": "https://belafrica-backend.onrender.com"
}
